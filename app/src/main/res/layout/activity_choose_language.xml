<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseLanguage"
    android:background="@color/graylight">



    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="280dp"
        android:layout_height="280dp"
        card_view:cardBackgroundColor="#E6E6E6"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="12dp">

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:background="@drawable/bg_wth_brd_langauage">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="Choose Your langauage"
                android:textAllCaps="true"/>

            <TextView
                android:elevation="10dp"
                android:layout_below="@+id/textView"
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="भाषा चयन करे" />

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/transparent"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                >
            <ImageView
                android:adjustViewBounds="true"
                android:layout_marginTop="5dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/d_logo"
               />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/transparent"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/buttonEnglish"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="English"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/transparent"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                >
            <Button
                android:background="@android:color/transparent"
                android:id="@+id/buttonHindi"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text=" हिंदी "
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="22sp"
                />

            </android.support.v7.widget.CardView>
        <!--LinearLayout
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <RadioGroup
                android:layout_below="@id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup"
                >

                <RadioButton
                    android:id="@+id/radioEnglish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" English"
                    android:textStyle="bold"
                    android:checked="false"
                    android:textSize="25sp" />

                <RadioButton
                    android:textStyle="bold"
                    android:id="@+id/radioHindi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" हिंदी"
                    android:layout_marginTop="10dp"
                    android:checked="false"
                    android:textSize="24sp" />

            </RadioGroup>

        </LinearLayout-->

      </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>